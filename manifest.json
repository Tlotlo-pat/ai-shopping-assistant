{
  "manifest_version": 3,
  "name": "Shopping Assistant (AI)",
  "version": "1.0",
  "description": "Translate, summarize, and optimize e-commerce browsing with AI.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"],
   "icons": {
    "128": "icon128.png"
  }
}
